{
    // Workbench
    "workbench.statusBar.feedback.visible": false,
    "workbench.colorCustomizations":
    {
        "statusBar.background": "#1e1e1e",
        "statusBar.foreground": "#c1cccc",
        "statusBar.border": "#393939",
        //"list.warningForeground": "#e29a2d",
        //"editorWarning.foreground": "#e29a2d"
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,

    // Editor
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.suggestOnTriggerCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.codeLens": false,
    "editor.parameterHints.enabled": false,
    "editor.minimap.enabled": false,

    // Explorer
    "explorer.confirmDragAndDrop": false,

    // Terminal
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

    // Files
    "files.insertFinalNewline": true,

    // TypeScript
    "tslint.alwaysShowRuleFailuresAsWarnings": true,
    "typescript.updateImportsOnFileMove.enabled": "always",

    // Omnisharp
    "omnisharp.path": "latest",
    "omnisharp.disableMSBuildDiagnosticWarning": true,

    // Git
    "diffEditor.renderSideBySide": false,

    // Formatting
    "html.format.wrapAttributes": "preserve",

    // Vim
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-c>": false, //copy
        "<C-x>": false, //cut
        "<C-v>": false, //paste
        "<C-f>": false, //find
        "<C-t>": false, //show symbols
        "<C-a>": false,  //select all
        "<C-k>": false, //VSCode leader
        "<C-b>": false, //VSCode toggle sidebar
        "<C-y>": false, //VSCode redo
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["u"],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }

            ]
        },
        {
            "before": ["<C-r>"],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        }
    ],

    // Search
    "files.exclude": {
        "**/node_modules": true,
        "**/bin": true,
        "**/obj": true,
        "**/*.orig": true
    },
    "window.zoomLevel": 0,

    // Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // Plugins
    "trailing-spaces.highlightCurrentLine": false,
    "trailing-spaces.trimOnSave": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.enabled": false,
    "powershell.powerShellExePath": "C:\\WINDOWS\\SysWow64\\WindowsPowerShell\\v1.0\\powershell.exe",
    "python.pythonPath": "C:\\Python27\\python.exe",
    "sort-imports.on-save": false
}
