[user]
	name = Steven Anderson
	email = steve@whilefalse.net
[alias]
	s = status
	d = diff --ignore-space-change -M
	t = "log --color --graph --abbrev-commit --pretty=format:'%C(auto)%h -%C(auto)%d %s %C(green)(%ci) %C(cyan)%an'"
	ff = merge --ff-only
[rebase]
	autosquash = true
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
