if [ -z $2 ]
then
echo "Usage: ./createproject GITHUB_NAME HOSTNAME."
echo "MUST BE RUN FROM ~/git/!!!"
exit
fi
echo "CLONING..."
git clone git@github.com:22Blue/$1.git

echo "CREATING tmp/"
cd "$1/app/"
mkdir -p tmp/cache/models tmp/cache/persistent tmp/cache/views tmp/logs tmp/sessions tmp/tests
chmod -R 777 tmp/

cd ..
echo "ADDING HOST $2.local..."
sudo echo "127.0.0.1	$2.local" | sudo tee -a /etc/hosts > /dev/null
echo "ADDING VHOST $2.local..."

sudo echo "
<VirtualHost *:80>
ServerName $2.local
DocumentRoot `pwd`/app/webroot/
<Directory `pwd`/app/webroot/>
AllowOverride All
</Directory>
</VirtualHost>
" | sudo tee -a /etc/apache2/sites-available/projects > /dev/null

echo "RESTARTING APACHE"
sudo /etc/init.d/apache2 restart

